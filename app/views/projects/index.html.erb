<main role="main">
  <section class="jumbotron bg-light">
    <div class="container">
      <h1 class="jumbotron-heading">My Portfolio</h1>
      <h3 style="color:black;"><small>Welcome to my site! Here's some projects that I've completed 
      over the course of my education both at Rampart High School and at UCCS.</h3>
    </div>
  </section>
</main>

<div class="album py-5 bg-secondary">
  <div class="container">
    <div class="row">

      <% @projects.each do |project| %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow bg-light">
            <div class="card-body">
              <h2 class="card-text"><%= project.title %></h2>
              <h5 class="card-text"><small><%= project.description %></small></h5>
              <br>
              <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <a class="btn btn-secondary" style="color:white;" <%= link_to 'View', project %></a>
                  </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>