<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_project_path(@project) %> |
  <%= link_to 'Delete', @project, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Back', projects_path %>
<% else %>
  <%= link_to 'Back', projects_path %>
<% end %>
